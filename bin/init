sudo echo "nameserver 8.8.8.8" > /etc/resolv.conf

sudo wpa_cli -i wlan0 reconfigure

# ifconfig wlan0 up

sudo service networking restart

sudo mkdir /etc/default/kodi
sudo systemctl daemon-reload



sudo apt-get update
